@model Fan
@{
    ViewData["Title"] = "Fan";
}

<h1>Fan</h1>

<form asp-action="ControlPlug" asp-controller="Fans" method="put">
    @if (Model.IsPlugin)
    {
        <button class="btn btn-warning" name="isPlugin" value="False">Unplug</button>
    }
    else
    {
        <button class="btn btn-outline-warning" name="isPlugin" value="True">Plugin</button>
    }
</form>

<div class="card border-success shadow mt-1">
    <div class="card-body">
        <div class="float-right">
            <form asp-action="ControlShook" asp-controller="Fans" method="put">
                @if (Model.IsShook)
                {
                    <button class="btn btn-outline-primary" name="isShook" value="False">Pull</button>
                }
                else
                {
                    <button class="btn btn-primary" name="isShook" value="True">Push Shook</button>
                }
            </form>
        </div>

        <form asp-action="PushNumber" asp-controller="Fans" method="put">
            <button class="btn btn-dark" name="number" value="0">0</button>
            <button class="btn btn-dark" name="number" value="1">1</button>
            <button class="btn btn-dark" name="number" value="2">2</button>
            <button class="btn btn-dark" name="number" value="3">3</button>
            @if (Model.IsWorking)
            {
                <button class="btn btn-outline-success ml-3">@Model.Number</button>
            }
            else
            {
                <button class="btn btn-outline-danger ml-3">@Model.Number</button>
            }
        </form>
    </div>
</div>

<div class="pt-2">
    @if (Model.IsWorking)
    {
        <h4 class="text-success">ON</h4>
    }
    else
    {
        <h4 class="text-danger">OFF</h4>
    }

    @if (Model.IsShook)
    {
        <h4 class="text-info">Shook Up</h4>
    }
    else
    {
        <h4 class="text-info">Stop Shook</h4>
    }
</div>
